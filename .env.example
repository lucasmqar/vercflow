# VERCFLOW Environment Variables

# App
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=vercflow
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vercflow

# Storage (Minio/S3)
STORAGE_ENDPOINT=localhost
STORAGE_PORT=9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=vercflow-assets

# Email (MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025

# Auth (JWT / Supabase)
JWT_SECRET=your_super_secret_jwt_key_here
NEXT_PUBLIC_SUPABASE_URL=http://localhost:5432
NEXT_PUBLIC_SUPABASE_ANON_KEY=fake-anon-key

# Features
ENABLE_PDF_GENERATION=true
ENABLE_SIGNATURES=true
