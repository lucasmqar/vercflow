{
  "name": "vercflow",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "VERCFlow"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w @vercflow/web\" \"npm run dev -w @vercflow/api\"",
    "build": "npm run build -w @vercflow/web && npm run build -w @vercflow/api",
    "db:migrate": "npm run migrate --workspace @vercflow/db",
    "db:generate": "npm run generate --workspace @vercflow/db",
    "db:seed": "npm run seed --workspace @vercflow/db",
    "db:studio": "npm run studio --workspace @vercflow/db",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.4.5"
  }
}